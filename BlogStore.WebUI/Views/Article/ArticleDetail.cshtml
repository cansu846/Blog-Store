@{
    Layout = null;
}
<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_HeadLayoutComponentPartial")

<body>

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    @await Component.InvokeAsync("_NavbarLayoutComponentPartial")
    @await Component.InvokeAsync("_ArticleDetailMainCoverImageComponentPartial", new {id = ViewBag.Id})

    <section class="section">
        <div class="container">

            <div class="row blog-entries element-animate">

                <div class="col-md-12 col-lg-8 main-content">

                    @await Component.InvokeAsync("_ArticleDetailContentComponentPartial", new {id = ViewBag.Id})

                    @await Component.InvokeAsync("_ArticleDetailCommentListComponentPartial", new {id = ViewBag.Id})

                </div>

                <!-- END main-content -->

                <div class="col-md-12 col-lg-4 sidebar">
                    
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailAboutAuthorComponentPartial", new {id = ViewBag.Id})
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailPopularPostComponentPartial")
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("_ArticleDetailCategoryListComponentPartial")

                  
                    <!-- END sidebar-box -->
                    @await Component.InvokeAsync("ArticleDetailTagsComponentPartial")
                <!-- END sidebar -->

            </div>
        </div>
    </section>

    @await Component.InvokeAsync("ArticleDetailMorePostComponentPartial")

    <!-- End posts-entry -->
    @await Component.InvokeAsync("_FooterComponentPartial")

    <!-- /.site-footer -->
    <!-- Preloader -->
    @await Component.InvokeAsync("_ScriptLayoutComponentPartial")

</body>
</html>
