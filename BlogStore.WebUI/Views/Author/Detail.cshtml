@model AuthorDetailViewModel

@{
    ViewData["Title"] = "Yazar Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div class="container">
<div class="row mt-4">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-fluid rounded shadow" />
        <h3 class="mt-3">@Model.FullName</h3>
        <p class="text-muted">@Model.Email</p>
    </div>
    <div class="col-md-8">
        <h4>Hakkında</h4>
        <p>@Model.Description</p>

        <h4 class="mt-4">Makaleleri</h4>
        @if (Model.Articles.Count > 0)
        {
            <ul class="list-group">
                @foreach (var article in Model.Articles)
                {
                    <li class="list-group-item">
                        <a href="/Article/Detail/@article.Slug">@article.Title</a>
                        <span class="text-muted float-end">@article.CreatedDate.ToString("dd MMM yyyy")</span>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Bu yazar henüz makale yayınlamamış.</p>
        }
    </div>
</div>
</div>
