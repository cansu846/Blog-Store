@{
    Layout = null;
}
<!doctype html>
<html lang="en">
@await Component.InvokeAsync("_HeadLayoutComponentPartial")
<body>

    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    @await Component.InvokeAsync("_NavbarLayoutComponentPartial")

    <div class="hero overlay inner-page bg-primary py-5">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center pt-5">
                <div class="col-lg-6">
                    <h1 class="heading text-white mb-3" data-aos="fade-up">Blog</h1>
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("_ArticleListComponentPartial")

    @await Component.InvokeAsync("_FooterComponentPartial")

    <!-- Preloader -->
    @await Component.InvokeAsync("_ScriptLayoutComponentPartial")
</body>
</html>
