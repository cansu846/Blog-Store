@using BlogStore.EnitityLayer.Entities
@model List<Article>

<!-- Start posts-entry -->
<section class="section posts-entry posts-entry-sm bg-light">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 text-uppercase text-black">Daha Fazla Blog Yazısı</div>
        </div>
        <div class="row">
            @for (var i = 0; i < Model.Count; i++)
            {

                <div class="col-md-6 col-lg-3">
                    <div class="blog-entry">
                        <a href="single.html" class="img-link">
                            <img src="@Model[i].ImageUrl" alt="Image" class="img-fluid">
                        </a>
                        <br />
                        <span class="date">@Model[i].CreateDate.ToString("mm-dd-yyyy")</span>
                        <h2><a href="single.html">@Model[i].Title</a></h2>
                        <p>@Model[i].Description.Substring(0,100)...</p>
                        <p><a href="#" class="read-more">Devamını Oku</a></p>
                    </div>
                </div>
                @if (i == 3)
                {
                    break;
                }
            }
          
        </div>
    </div>
</section>