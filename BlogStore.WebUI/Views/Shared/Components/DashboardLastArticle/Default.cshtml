<div class="col-12">
    <div class="card">
        <div class="card-body">
            <div class="d-md-flex align-items-center">
                <div>
                    <h4 class="card-title">Son Yayınlanan Makalelerim</h4>
                    <p class="card-subtitle">

                    </p>
                </div>
                @*   <div class="ms-auto mt-3 mt-md-0">
                    <select class="form-select theme-select border-0" aria-label="Default select example">
                        <option value="1">March 2025</option>
                        <option value="2">March 2025</option>
                        <option value="3">March 2025</option>
                    </select>
                </div> *@
            </div>
            <div class="table-responsive mt-4">
                <table class="table mb-0 text-nowrap varient-table align-middle fs-3 ">
                    <thead >
                        <tr>
                            <th scope="col" class="px-0 text-muted">Makale Adı</th>
                            <th scope="col" class="px-0 text-muted">
                                Kategori Adı
                            <th scope="col" class="px-0 text-muted">
                                Yorum Sayısı
                            </th>
                            </th>
                            <th scope="col" class="px-0 text-muted text-end">
                                Oluşturulma Tarihi
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.values)
                        {
                            <tr>
                                <td class="px-0">
                                    <a href="/Article/ArticleDetail/@item.Slug" class="text-decoration-underline text-primary fw-semibold">
                                        <div class="d-flex align-items-center">
                                            <img src="@item.ImageUrl" class="rounded-circle" width="120"
                                                 alt="flexy" />
                                            <div class="ms-3">
                                                <h6 class="mb-0 fw-bolder">@item.Title </h6>
                                            </div>
                                        </div>
                                    </a>
                                </td>

                                <td class="px-0">
                                    <span class="badge bg-info">@item.Category.CategoryName</span>
                                </td>
                                <td class="px-0">
                                    <span class="badge bg-success">@item.Comments.Count</span>
                                </td>
                                <td class="px-0 text-dark fw-medium text-end">
                                    @item.CreateDate.ToString("mm-dd-yyyy")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
