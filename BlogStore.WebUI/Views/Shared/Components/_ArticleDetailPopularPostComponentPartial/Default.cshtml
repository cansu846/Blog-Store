@using BlogStore.EnitityLayer.Entities
@model List<Article>

<div class="sidebar-box">
    <h3 class="heading">Popüler Makaleler</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach(var item in Model)
            {
                <li>
                    <a href="">
                        <img src="@item.ImageUrl" alt="Image placeholder" class="me-4 rounded">
                        <div class="text">
                            <h4>@item.Description</h4>
                            <div class="post-meta">
                                <span class="mr-2">@item.CreateDate.ToString("dd-mm-yyyy") </span>
                            </div>
                        </div>
                    </a>
                </li>
            }
           
        </ul>
    </div>
</div>
